<p id="notice"><%= notice %></p>

<header class="category-title">
  <h1><%= @category.name %></h1>
</header>

<div class="post-container">
  <% @posts.each do |post| %>
  <div class="posting">
    <h3><%= post.title %></h3>
    <p><%= post.description %></p>
  </div>
  <% end %>
</div>


