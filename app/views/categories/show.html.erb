<div class="nav">
	<a href="/categories">
		<h3>Home</h3>
	</a>
</div>


<header class="category-title">
  <h1><%= @category.name %></h1>
</header>

<% if @posts.present? %>
	<div class="post-container">
	  <% @posts.each do |post| %>
			<a href="<%= "/posts/#{post.id}" %>">
	  	<div class="posting list">
	    	<h3><%= post.title %></h3>
	    	<p><%= post.description %></p>
	  	</div>
  	<% end %>
  </div>
<% else %>
	<p>Sorry, there are no posts like that!</p>
<% end %>